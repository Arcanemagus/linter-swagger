{
  "name": "linter-swagger",
  "main": "./lib/main",
  "version": "0.4.3",
  "description": "Lint Swagger files on the fly, using swagger-parser",
  "keywords": [
    "swagger",
    "linter",
    "atom"
  ],
  "repository": "https://github.com/AtomLinter/linter-swagger",
  "license": "MIT",
  "engines": {
    "atom": ">=1.9.0 <2.0.0"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "test": "apm test",
    "lint": "eslint ."
  },
  "dependencies": {
    "atom-package-deps": "^4.0.1",
    "swagger-parser": "4.1.0",
    "lodash": "^4.16.4",
    "yaml-js": "^0.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@commitlint/travis-cli": "^6.1.3",
    "@semantic-release/apm-config": "^2.0.1",
    "husky": "^0.14.3",
    "semantic-release": "^15.1.7",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "jasmine-fix": "^1.3.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/extensions": [
        "off",
        "never"
      ],
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "atom": true
    }
  },
  "release": {
    "extends": "@semantic-release/apm-config"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}